{
  "name": "pr-pilot-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev:cli": "pnpm --filter @pr-pilot/cli dev",
    "dev:web": "pnpm --filter @pr-pilot/web dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist .next tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "engines": {
    "pnpm": ">=9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ]
  }
}
